<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.szxy.mapper.GoodsImageMapper">

    <sql id="colImg">
       id,goods_id as goodsId,img_url as imgUrl
    </sql>

    <!-- 查询对应商品的图片 -->
    <select id="selGoodsImageByGoodId"  parameterType="int"  resultType="Image">
       select 
            <include refid="colImg" />
       from image where goods_id = #{goodId}
    </select>

</mapper>

